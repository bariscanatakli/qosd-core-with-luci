config qosd 'main'
	option enabled '1'
	option syslog_remote '0'
	option syslog_host ''
	option syslog_port '5514'
	option syslog_proto 'udp'
	option syslog_level '7'

# Persona defaults align with Dong et al., IEEE Access 2019 (context-aware QoS)
config persona 'streaming'
	option priority 'medium'
	option policy_action 'boost'
	option dscp 'AF41'
	option min_confidence '70'

config persona 'gaming'
	option priority 'high'
	option policy_action 'boost'
	option dscp 'CS6'
	option min_confidence '80'

config persona 'voip'
	option priority 'high'
	option policy_action 'boost'
	option dscp 'EF'
	option min_confidence '85'

config persona 'work'
	option priority 'medium'
	option policy_action 'boost'
	option dscp 'AF21'
	option min_confidence '60'

config persona 'bulk'
	option priority 'low'
	option policy_action 'throttle'
	option dscp 'CS1'
	option min_confidence '50'

config persona 'iot'
	option priority 'low'
	option policy_action 'observe'
	option dscp 'CS2'
	option min_confidence '40'

config persona 'other'
	option priority 'normal'
	option policy_action 'observe'
	option dscp 'CS0'
	option min_confidence '20'

config watchdog 'default'
	option backoff_ms '5000'
